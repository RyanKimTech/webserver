    color: white;
    border: 2px solid var(--primary-color);
}

.link-demo:hover {
    background-color: var(--primary-hover);
    transform: translateY(-2px);
}

/* Call to Action */
.projects-cta {
    text-align: center;
    padding: 50px 20px;
    background-color: var(--bg-primary);
    border-radius: 12px;
    box-shadow: 0 4px 12px var(--shadow);
    margin-top: 40px;
